@model PagedList.IPagedList<EntityLayer.Entities.User>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .boldyap > td {
        font-weight: bold !important;
    }
</style>
<link href="~/Content/PagedList.css" rel="stylesheet" />
<center><a href="/User/Create" class="btn btn-primary">Personel Ekle</a></center>
<table class="table table-bordered">
    <thead>
        <tr class="boldyap">
            <td>Id</td>
            <td>İsim</td>
            <td>Soyisim</td>
            <td>Mail</td>
            <td>Rol</td>
            <td>Güncelle</td>
            <td>Sil</td>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        if (item.Role == "Personel")
        {
            <tr>
                <td>@item.UserId</td>
                <td>@item.Name</td>
                <td>@item.SurName</td>
                <td>@item.Mail</td>
                <td>@item.Role</td>
                <td><a class="btn btn-primary" href="/User/Update/@item.UserId">Güncelle</a></td>
                <td>@Html.ActionLink("Sil", "Delete", new { item.UserId }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istiyormusunuz?')" })</td>
            </tr>
        }

    }
</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))