@model PagedList.IPagedList<EntityLayer.Entities.Customer>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .boldyap > td {
        font-weight: bold !important;
    }
</style>
<link href="~/Content/PagedList.css" rel="stylesheet" />
<center><a href="/Musteri/Import" class="btn btn-success">Müşteri Excel İmport</a></center><br /><br />
<center><a href="/Musteri/Create" class="btn btn-primary">Müşteri Ekle</a></center>
<table class="table table-bordered">
    <thead>
        <tr class="boldyap">
            <td>Id</td>
            <td>İsim</td>
            <td>Güncelle</td>
            <td>Sil</td>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CustomerId</td>
            <td>@item.Name</td>
            <td><a class="btn btn-primary" href="/Musteri/Update/@item.CustomerId">Güncelle</a></td>
            <td>@Html.ActionLink("Sil", "Delete", new { item.CustomerId }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istiyormusunuz?')" })</td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
