@model EntityLayer.Entities.Ziyaret
<div class="col-lg-12">
    <center>
        <a href="/AdminZiyaret/ZiyaretEdilecek" class="btn btn-primary">Ziyeret Edilecekler</a>
        <a href="/AdminZiyaret/OnayBekliyor" class="btn btn-warning">Ziyeret Edildi Onay Bekliyor</a>
        <a href="/AdminZiyaret/OnaylanmadiZiyaretEdilecek" class="btn btn-danger">Ziyeret Onaylanmadı Tekrar Ziyaret Edilcek</a>
        <a href="/AdminZiyaret/Onaylandı" class="btn btn-success">Ziyeret Onalandı</a>
    </center>
    <br />
    <div class="float-right">
        @using (Html.BeginForm("Ara", "AdminZiyaret", FormMethod.Post))
        {
            <div class="form-group">
                <div style="width:75%; float:left;">
                    @Html.TextBox("p", null, new { @class = "form-control float-left" })

                </div>
                <div style="width:25%; float:left;">
                    <input type="submit" class="float-left btn btn-success" value="ara" />
                </div>
            </div>
        }
    </div>
    <form method="post" action="/AdminZiyaret/FiltreList">
        <table class="table table-bordered">

            <tr>
                <td>Personel</td>
                <td>
                    @Html.DropDownListFor(x => x.UserId, (List<SelectListItem>)ViewBag.ktgr, "Hepsi", new { @class = "form-control", @name = "UserId" })
                </td>
                <td>Şube</td>
                <td>
                    @Html.DropDownListFor(x => x.SubeId, (List<SelectListItem>)ViewBag.ktgr1, "Hepsi", new { @class = "form-control", @name = "SubeId" })

                </td>
                <td>Durum</td>
                <td>
                    @Html.DropDownListFor(x => x.DurumId, (List<SelectListItem>)ViewBag.ktgr2, "Hepsi", new { @class = "form-control", @name = "DurumId" })
                </td>
                <td>Tarih Başlangıç</td>
                <td><input type="datetime-local" class="form-control" name="CreateDate" /></td>
                <td>Tarih Bitiş</td>
                <td><input type="datetime-local" class="form-control" name="ZiyaretDate" /></td>
                <td><input type="submit" value="Bul" class="btn btn-primary" /></td>
            </tr>
        </table>
    </form>
</div>